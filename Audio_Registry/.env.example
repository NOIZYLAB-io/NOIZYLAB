# ==============================================================================
# METABEAST_CC - Environment Configuration
# ==============================================================================
# Copy this file to .env and configure your settings
# ==============================================================================

# Registry Paths
METABEAST_ROOT=/path/to/Audio_Registry
METABEAST_DATA_DIR=${METABEAST_ROOT}/data
METABEAST_SNAPSHOTS_DIR=${METABEAST_ROOT}/snapshots

# API Configuration (if using REST API)
METABEAST_API_HOST=0.0.0.0
METABEAST_API_PORT=8080
METABEAST_API_DEBUG=false

# Home Assistant Integration
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token

# Node-RED Integration
NODERED_URL=http://localhost:1880
NODERED_API_KEY=your_api_key

# Notification Services
PUSHOVER_APP_TOKEN=your_pushover_app_token
PUSHOVER_USER_KEY=your_pushover_user_key

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Cloud AI Services (if using)
LALAL_AI_API_KEY=your_lalal_ai_key
ASSEMBLYAI_API_KEY=your_assemblyai_key
DEEPGRAM_API_KEY=your_deepgram_key
OPENAI_API_KEY=your_openai_key

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/metabeast

# Logging
LOG_LEVEL=INFO
LOG_FILE=${METABEAST_ROOT}/logs/metabeast.log

# Feature Flags
ENABLE_AUTO_AUDIT=true
ENABLE_NOTIFICATIONS=true
ENABLE_CLOUD_SYNC=false
