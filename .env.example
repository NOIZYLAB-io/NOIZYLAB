# Environment variables for NOIZYLAB Tailscale Infrastructure
# Copy this file to .env and customize for your setup

# Tailscale Authentication
# Generate an auth key at: https://login.tailscale.com/admin/settings/keys
TAILSCALE_AUTH_KEY=

# Tailscale Hostname
# This will be the hostname shown in your Tailscale network
TAILSCALE_HOSTNAME=noizylab-docker

# Network Configuration
# Subnet to advertise (optional)
TAILSCALE_ADVERTISE_ROUTES=

# Exit Node Configuration
# Set to true to advertise as exit node
TAILSCALE_EXIT_NODE=false

# MagicDNS
# Enable MagicDNS for hostname-based access
TAILSCALE_MAGIC_DNS=true

# Logging
# Log level: debug, info, warn, error
LOG_LEVEL=info
