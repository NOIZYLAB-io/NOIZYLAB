# GABRIEL File Suite - Environment Variables
# Copy this to .env and fill in your values

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database
GABRIEL_DB_PATH=/Volumes/GABRIEL/gabriel_suite.db

# Dashboard
API_HOST=0.0.0.0
API_PORT=8080
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO
LOG_FILE=/Volumes/GABRIEL/gabriel_suite.log

# Performance
MAX_WORKERS=8
CACHE_SIZE_MB=512

# Cloud Backup (optional)
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# S3_BUCKET=gabriel-backup
