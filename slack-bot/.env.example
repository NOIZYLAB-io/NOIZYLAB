# Slack Bot Configuration
# Copy this file to .env and fill in your actual tokens

# Get these from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Bot Settings
PORT=3000
NODE_ENV=development

# NOIZYLAB Script Paths
NOIZYLAB_HOME=/Users/m2ultra/NOIZYLAB
TTP21_SCRIPT=${NOIZYLAB_HOME}/TTP21_HOT_ROD_GUIDE.sh
STATUS_SCRIPT=${NOIZYLAB_HOME}/QUICK_STATUS.sh
CLEANUP_SCRIPT=${NOIZYLAB_HOME}/ULTRA_AGGRESSIVE.sh
DISKWARRIOR_SCRIPT=${NOIZYLAB_HOME}/DISKWARRIOR_EMERGENCY_GUIDE.sh

# Monitoring Settings
ENABLE_DAILY_REPORTS=true
DAILY_REPORT_CHANNEL=#disk-health
ALERT_CHANNEL=#tech-support

# Security
ALLOWED_USERS=U01234567,U01234568  # Comma-separated Slack user IDs
ADMIN_USERS=U01234567  # Can run destructive commands
