{
  "version": "1.0.0",
  "description": "Mode Manager Policy Map - Defines action categories and safety levels",
  "last_updated": "2025-12-01",
  
  "action_categories": {
    "business": {
      "description": "Business operations - always safe",
      "actions": ["intake", "schedule", "billing", "marketing", "crm", "analytics"],
      "risk_level": "none"
    },
    "diagnostics": {
      "description": "System diagnostics - always safe",
      "actions": ["scan", "analyze", "report", "monitor", "health_check"],
      "risk_level": "none"
    },
    "safe_repairs": {
      "description": "Low-risk repairs that can be automated",
      "actions": ["clear_cache", "clear_logs", "optimize", "cleanup", "defrag"],
      "risk_level": "low"
    },
    "moderate_repairs": {
      "description": "Moderate-risk repairs requiring care",
      "actions": ["driver_update", "registry_clean", "malware_remove"],
      "risk_level": "moderate"
    },
    "major_repairs": {
      "description": "High-risk repairs requiring approval",
      "actions": ["partition", "firmware", "bios", "network_config"],
      "risk_level": "high"
    },
    "forbidden": {
      "description": "Actions that are NEVER allowed",
      "actions": ["kernel_modify", "os_modify", "credential_access"],
      "risk_level": "critical"
    }
  },
  
  "mode_permissions": {
    "safe_autopilot": {
      "auto": ["business", "diagnostics"],
      "approval": ["safe_repairs", "moderate_repairs", "major_repairs"],
      "forbidden": ["forbidden"]
    },
    "technician_assist": {
      "auto": ["business", "diagnostics", "safe_repairs"],
      "approval": ["moderate_repairs", "major_repairs"],
      "forbidden": ["forbidden"]
    },
    "full_autoops": {
      "auto": ["business", "diagnostics", "safe_repairs", "moderate_repairs"],
      "approval": ["major_repairs"],
      "forbidden": ["forbidden"]
    }
  },
  
  "safety_principles": [
    "Never modify system files without explicit approval",
    "Never access credentials or sensitive data",
    "Never perform unsandboxed operations",
    "Always log all actions",
    "Always backup before major changes",
    "Always allow rollback",
    "Never violate user privacy",
    "Never make unauthorized network connections"
  ]
}

