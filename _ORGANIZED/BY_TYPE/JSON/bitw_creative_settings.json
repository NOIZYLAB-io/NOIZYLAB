{
  "// BITW Creative AI Workspace Settings": "",
  "// Intelligent Code Completion": "",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.showSnippets": true,
  "editor.tabCompletion": "on",
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.suggest.localityBonus": true,
  "// Creative Visual Enhancements": "",
  "workbench.colorTheme": "Material Theme Darker High Contrast",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'JetBrains Mono', Monaco",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "// AI-Powered Features": "",
  "editor.inlineSuggest.enabled": true,
  "editor.lightbulb.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true,
    "source.addMissingImports": true
  },
  "// Creative Coding Environment": "",
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  "// Intelligent File Management": "",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "explorer.openEditors.visible": 0,
  "breadcrumbs.enabled": true,
  "// Advanced Git Integration": "",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "// Creative Terminal": "",
  "terminal.integrated.fontFamily": "MesloLGS NF, Monaco",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "// AI Performance Optimization": "",
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "extensions.autoUpdate": true,
  "// Creative Debugging": "",
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "auto",
  "debug.showInStatusBar": "always"
}