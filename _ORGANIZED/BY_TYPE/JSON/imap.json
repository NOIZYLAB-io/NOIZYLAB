{
  "providers": {
    "gmail": {
      "host": "imap.gmail.com",
      "port": 993,
      "secure": true,
      "auth": {
        "user": "${GMAIL_USER}",
        "pass": "${GMAIL_APP_PASSWORD}"
      },
      "tls": {
        "rejectUnauthorized": true
      }
    },
    "office365": {
      "host": "outlook.office365.com",
      "port": 993,
      "secure": true,
      "auth": {
        "user": "${OFFICE365_USER}",
        "pass": "${OFFICE365_PASSWORD}"
      },
      "tls": {
        "rejectUnauthorized": true
      }
    },
    "custom": {
      "host": "${IMAP_HOST}",
      "port": "${IMAP_PORT}",
      "secure": true,
      "auth": {
        "user": "${IMAP_USER}",
        "pass": "${IMAP_PASSWORD}"
      }
    }
  },
  "settings": {
    "checkInterval": 60000,
    "maxConnections": 3,
    "keepAlive": true,
    "folders": {
      "inbox": "INBOX",
      "sent": "[Gmail]/Sent Mail",
      "drafts": "[Gmail]/Drafts",
      "spam": "[Gmail]/Spam",
      "trash": "[Gmail]/Trash"
    }
  }
}
