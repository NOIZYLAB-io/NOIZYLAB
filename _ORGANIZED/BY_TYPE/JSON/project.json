{
  "name": "NOIZYLAB Project Rules",
  "description": "Project-specific rules and configurations for NOIZYLAB projects",
  "version": "1.0.0",
  "rules": {
    "fileNaming": {
      "python": "snake_case",
      "javascript": "camelCase",
      "constants": "UPPER_SNAKE_CASE"
    },
    "codeStyle": {
      "python": {
        "maxLineLength": 120,
        "indent": 4,
        "quotes": "double"
      },
      "javascript": {
        "indent": 2,
        "quotes": "single",
        "semicolons": false
      }
    },
    "git": {
      "autoCommit": true,
      "commitMessageStyle": "conventional",
      "branchNaming": "feature/description"
    },
    "testing": {
      "enabled": true,
      "framework": "pytest",
      "coverageThreshold": 80
    }
  },
  "integrations": {
    "autokeep": {
      "enabled": true,
      "autoCommit": true,
      "autoReview": true
    },
    "linting": {
      "python": ["flake8", "black", "mypy"],
      "javascript": ["eslint", "prettier"]
    }
  }
}

