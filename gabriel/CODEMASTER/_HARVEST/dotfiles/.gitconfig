[user]
	name = NOIZY.ai
	email = rsplowman@icloud.com

[credential]
    helper = osxkeychain

[core]
    editor = cursor --wait
    autocrlf = input
    excludesfile = ~/.gitignore_global

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

# ═══════════════════════════════════════════════════════════════
# SUPERSONIC GIT ALIASES - M2 ULTRA SPEED
# ═══════════════════════════════════════════════════════════════
[alias]
    # INSTANT STATUS
    s = status -sb
    st = status
    
    # SUPERSONIC COMMITS
    c = commit -m
    ca = commit -am
    amend = commit --amend --no-edit
    
    # LIGHTNING ADD
    a = add
    aa = add --all
    ap = add -p
    
    # TURBO PUSH/PULL
    p = push
    pf = push --force-with-lease
    pl = pull
    
    # QUICK BRANCH
    b = branch
    ba = branch -a
    bd = branch -d
    bD = branch -D
    co = checkout
    cob = checkout -b
    
    # FAST LOG
    l = log --oneline -20
    lg = log --graph --oneline --decorate -20
    la = log --graph --oneline --decorate --all -30
    
    # DIFF SPEED
    d = diff
    ds = diff --staged
    
    # STASH QUICK
    ss = stash
    sp = stash pop
    sl = stash list
    
    # RESET POWER
    unstage = reset HEAD --
    undo = reset --soft HEAD~1
    nuke = reset --hard HEAD
    
    # REMOTE OPS
    r = remote -v
    ra = remote add
    
    # COMBO MOVES - ONE COMMAND DOES IT ALL
    save = !git add -A && git commit -m
    sync = !git pull && git push
    fresh = !git fetch --all --prune && git pull
    
    # SUPERSONIC DEPLOY - ADD, COMMIT, PUSH IN ONE
    ship = !git add -A && git commit -m \"$1\" && git push && :
    yeet = !git add -A && git commit -m \"$1\" && git push && :
    
    # QUICK CLONE
    cl = clone --depth 1
    
    # CLEAN UP
    cleanup = !git branch --merged | grep -v main | xargs -n 1 git branch -d
    
    # INFO
    who = shortlog -sn
    last = log -1 HEAD --stat
    
    # ALIASES LIST
    aliases = config --get-regexp alias


# ═══════════════════════════════════════════════════════════════
# HOT ROD PERFORMANCE - MAXIMUM FLOW
# ═══════════════════════════════════════════════════════════════
[core]
    # PARALLEL PROCESSING
	preloadIndex = true
	fscache = true
	compression = 9
	looseCompression = 9
    
[pack]
    # TURBO PACK - USE ALL M2 ULTRA CORES
	threads = 24
	windowMemory = 4g
	packSizeLimit = 2g
	window = 250
	depth = 50
	deltaCacheSize = 256m

[gc]
    # AGGRESSIVE GARBAGE COLLECTION
	auto = 256
	autoPackLimit = 4
    
[http]
    # NETWORK HOT ROD
	postBuffer = 524288000
	maxRequestBuffer = 100M
    lowSpeedLimit = 0
    lowSpeedTime = 999999

[protocol]
    # USE FASTEST PROTOCOL
    version = 2

[transfer]
    # PARALLEL TRANSFERS
    fsckobjects = false

[receive]
    fsckObjects = false

[fetch]
    fsckobjects = false
	parallel = 24
    
[submodule]
	fetchJobs = 24

[index]
    # FAST INDEX
    threads = true
    version = 4

[feature]
    # ENABLE ALL PERFORMANCE FEATURES
	manyFiles = true

[maintenance]
    auto = false
    strategy = incremental


# ═══════════════════════════════════════════════════════════════
# CLOUDFLARE DNS OPTIMIZATION (1.1.1.1 = FASTEST DNS)
# ═══════════════════════════════════════════════════════════════
# Note: Set system DNS to 1.1.1.1 and 1.0.0.1 for max speed
# This is handled at network level for ALL git operations

# ═══════════════════════════════════════════════════════════════
# SSH MULTIPLEXING - REUSE CONNECTIONS (MASSIVE SPEED BOOST)
# ═══════════════════════════════════════════════════════════════
# Configured in ~/.ssh/config for persistent connections

# ═══════════════════════════════════════════════════════════════
# FLOW ALIASES - ZERO FRICTION WORKFLOW
# ═══════════════════════════════════════════════════════════════
[alias]
    # FLOW STATE - ONE COMMAND WORKFLOWS
    flow = !git add -A && git commit -m \"FLOW: $1\" && git push && :
    
    # MORNING SYNC - START DAY FRESH
    morning = !git fetch --all --prune && git pull --rebase && git status -sb
    
    # NIGHT CLEANUP - END DAY CLEAN
    night = !git add -A && git commit -m \"NIGHTLY: $(date +%Y-%m-%d)\" && git push && git gc --auto
    
    # QUICK SAVE POINTS
    wip = !git add -A && git commit -m \"WIP: work in progress\"
    checkpoint = !git add -A && git commit -m \"CHECKPOINT: $(date +%H:%M)\"
    
    # TURBO CLONE (SHALLOW + SINGLE BRANCH)
    turbo-clone = clone --depth 1 --single-branch
    
    # PARALLEL FETCH ALL
    fetch-all = fetch --all --jobs=8
    
    # SUPERSONIC STATUS
    ss = !git fetch --all -q && git status -sb
    
    # INSTANT DIFF
    changes = diff --stat
    
    # UNDO LAST (SAFE)
    oops = reset --soft HEAD~1
    
    # NUCLEAR RESET TO REMOTE
    nuke-local = !git fetch origin && git reset --hard origin/$(git branch --show-current)

[checkout]
	workers = 24
[credential "https://github.com"]
	useHttpPath = true
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
